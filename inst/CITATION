citHeader("To cite divDyn in publications use the following citation until the peer-reviewed article is published:")

citEntry(entry = "Article",
  title        = "The R package divDyn for quantifying diversity dynamics using fossil sampling data",
  author       = personList(as.person("Ádám T. Kocsis"),as.person("Carl J. Reddin"),as.person("John Alroy"),as.person("Wolfgang Kiessling")),
  journal      = "bioRxiv",
  year         = "2018",
  volume       = "",
  number       = "",
  pages        = "",
  url          = "http://biorxiv.org/cgi/content/short/423780v1",

  textVersion  =
  paste("Kocsis, Á.T., Reddin, C.J., Alroy, J. and Kiessling W. 2018",
        "The R package divDyn for quantifying diversity dynamics using fossil sampling data. ",
        "bioRxiv,",
        "https://doi.org/10.1101/423780")
)
